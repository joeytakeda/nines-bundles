{% extends 'base.html.twig' %}

 {% block pageheader %} 
    <h1>Element List</h1>
    <p class="count">
        Displaying {{ elements|length }} elements of {{ elements.getTotalItemCount }} total.
    </p>
 {% endblock %} 

{% block body %}

        <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            <a href="{{ path('element_new') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-plus"></span> New
            </a>
        </div>
    </div>
        
    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Label</th>
                <th>Uri</th>
                <th>Description</th>
                <th>Created</th>
                <th>Updated</th>            </tr>
        </thead>
        <tbody>
        {% for element in elements %}
            <tr>
                <td>
                    <a href="{{ path('element_show', { 'id': element.id }) }}">
                        {{ element.name }}
                    </a>
                </td>
                <td>{{ element.label }}</td>
                <td>{{ element.uri }}</td>
                <td>{{ element.description }}</td>
                <td>{% if element.created %}{{ element.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if element.updated %}{{ element.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        
    <div class="navigation">
        {{ knp_pagination_render(elements) }}
    </div>

{% endblock %}
