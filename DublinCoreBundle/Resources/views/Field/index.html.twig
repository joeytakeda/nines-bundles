{% extends 'base.html.twig' %}

 {% block pageheader %} 
    <h1>Field List</h1>
    <p class="count">
        Displaying {{ fields|length }} fields of {{ fields.getTotalItemCount }} total.
    </p>
 {% endblock %} 

{% block body %}

        <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            <a href="{{ path('field_new') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-plus"></span> New
            </a>
        </div>
    </div>
        
    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Value</th>
                <th>Created</th>
                <th>Updated</th>            </tr>
        </thead>
        <tbody>
        {% for field in fields %}
            <tr>
                <td>
                    <a href="{{ path('field_show', { 'id': field.id }) }}">
                        {{ field.value }}
                    </a>
                </td>
                <td>{% if field.created %}{{ field.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if field.updated %}{{ field.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        
    <div class="navigation">
        {{ knp_pagination_render(fields) }}
    </div>

{% endblock %}
