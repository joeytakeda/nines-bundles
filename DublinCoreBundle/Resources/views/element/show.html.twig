{% extends 'base.html.twig' %}

{% block pageheader %}
    <h1>Element</h1>
{% endblock %}

{% block body %}

    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('element_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
            {% if(is_granted('ROLE_DC_ADMIN')) %}
                <a href="{{ path('element_edit', { 'id': element.id }) }}" class="btn btn-default">
                    <span class='glyphicon glyphicon-edit'></span> Edit
                </a>
                <a href="{{ path('element_delete', { 'id': element.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Element?">
                    <span class='glyphicon glyphicon-remove'></span> Delete
                </a>
            {% endif %}
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ element.name }}</td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ element.label }}</td>
            </tr>
            <tr>
                <th>Uri</th>
                <td>{{ element.uri }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ element.description|raw }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ element.comment|raw }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if element.created %}{{ element.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if element.updated %}{{ element.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}
