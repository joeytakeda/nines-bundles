{% extends 'base.html.twig' %}

 {% block pageheader %} 
    <h1>Flag</h1>
 {% endblock %} 

{% block body %}

    <div class="btn-toolbar">
    <div class="btn-group pull-right">
        <a href="{{ path('flag_index') }}" class="btn btn-default">
            <span class="glyphicon glyphicon-arrow-left"></span> Back
        </a>
        <a href="{{ path('flag_edit', { 'id': flag.id }) }}" class="btn btn-default">
            <span class='glyphicon glyphicon-edit'></span> Edit
        </a>
        <a href="{{ path('flag_delete', { 'id': flag.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Flag?">
            <span class='glyphicon glyphicon-remove'></span> Delete
        </a>
    </div>
</div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ flag.name }}</td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ flag.label}}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ flag.description|raw }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if flag.created %}{{ flag.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if flag.updated %}{{ flag.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}
