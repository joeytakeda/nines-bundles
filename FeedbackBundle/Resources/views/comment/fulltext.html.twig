{% extends 'base.html.twig' %}

{% block pageheader %} 
    <h1>Comment Search</h1>
    {% if comments|length %}
        <p class="count">
            Displaying {{ comments|length }} comments of {{ comments.getTotalItemCount }} total.
        </p>
    {% endif %}
{% endblock %} 

{% block body %}

    <form method="get" action="{{ path('nines_feedback_comment_fulltext') }}" class="form-horizontal">
        <fieldset>
            <legend>Search</legend>
            <div class='form-group'>
                <label class='col-sm-2 control-label' for='q'>Search term</label>
                <div class='col-sm-10'>
                    <div class='input-group'>
                        <input type='text' name='q' id='q' class='form-control' value='{{ q }}'>
                        <span class="input-group-btn">
                            <button class="btn btn-primary" type="submit">
                                <span class='glyphicon glyphicon-search'></span>
                                Search
                            </button>
                        </span>
                    </div>
                </div>
            </div>
        </fieldset>
    </form>

    {% if comments|length %}
        <table class="table table-bordered table-condensed table-hover table-striped">
            <thead>
                <tr>
                    <th>Fullname</th>
                    <th>Email</th>
                    <th>Followup</th>
                    <th>Url</th>
                    <th>Content</th>
                    <th>Created</th>
                    <th>Updated</th>            </tr>
            </thead>
            <tbody>
                {% for comment in comments %}
                    <tr>
                        <td>
                            <a href="{{ path('nines_feedback_comment_show', { 'id': comment.id }) }}">
                                {{ comment.content|truncate(20) }}
                            </a>
                        </td>
                        <td>{{ comment.fullname }}</td>
                        <td>{{ comment.email }}</td>
                        <td>{% if comment.followUp %}Yes{% else %}No{% endif %}</td>
                        <td>{% if comment.created %}{{ comment.created|date }}{% endif %}</td>
                        <td>{% if comment.updated %}{{ comment.updated|date }}{% endif %}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <div class="navigation">
            {{ knp_pagination_render(comments) }}
        </div>
    {% endif %}

{% endblock %}
