{% extends 'base.html.twig' %}

{% block pageheader %}
    <h1>CommentStatus</h1>
{% endblock %}

{% block body %}

    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('admin_comment_status_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
            {% if(is_granted('ROLE_COMMENT_ADMIN')) %}
                <a href="{{ path('admin_comment_status_edit', { 'id': commentStatus.id }) }}" class="btn btn-default">
                    <span class='glyphicon glyphicon-edit'></span> Edit
                </a>
                <a href="{{ path('admin_comment_status_delete', { 'id': commentStatus.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this CommentStatus?">
                    <span class='glyphicon glyphicon-remove'></span> Delete
                </a>
            {% endif %}
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ commentStatus.name }}</td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ commentStatus.label }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ commentStatus.description }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if commentStatus.created %}{{ commentStatus.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if commentStatus.updated %}{{ commentStatus.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}
