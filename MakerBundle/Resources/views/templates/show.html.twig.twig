{% autoescape false %}
{{ "{% extends 'base.html.twig' %}" }}

{{ '{% block title %}' }}{{ entity_class_name }} Details {{ '{% endblock %}' }}

{{ " {% block pageheader %} "}}
    <h1>{{ entity_class_name }} Details</h1>
{{ " {% endblock %} "}}

{{ "{% block body %}" }}

    {{ "{% if is_granted('ROLE_ADMIN') %}" }}
    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            <a href="{{ "{{ path('" ~ route_name ~ "_edit', {'id': " ~ entity_var_singular ~ ".id }) }}" }}" class="btn btn-default">
                <span class="glyphicon glyphicon-edit"></span> Edit
            </a>
        </div>
        <div class='btn-group'>
            <form class='delete-form' method="post" action="{{ "{{ path('" ~ route_name ~ "_delete', {'id': " ~ entity_var_singular ~ ".id }) }}" }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                <input type="hidden" name="_method" value="DELETE">
                <input type="hidden" name="_token" value="{{ '{{ csrf_token("delete" ~ ' ~ entity_var_singular ~ '.id) }}' }}">
                <button class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span> Delete</button>
            </form>
        </div>
    </div>
    {{ "{% endif %}" }}

    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            {%  for field in mapped_field_names -%}
            <tr>
                <th>{{ field|capitalize }}</th>
                <td>{% apply spaceless %}
                    {% if field in field_mappings|keys %}
                        {% set mapping = field_mappings[field] %}
                        {% if mapping.type in ['datetime'] %}
                            {{ '{% if ' ~ entity_twig_var_singular ~ '.' ~ field ~ ' %}{{ ' ~ entity_twig_var_singular ~ '.' ~ field ~ '|date }}{% endif %}' }}
                        {% elseif mapping.type in ['date'] %}
                            {{ '{% if ' ~ entity_twig_var_singular ~ '.' ~ field ~ ' %}{{ ' ~ entity_twig_var_singular ~ '.' ~ field ~ '|date(\'Y-m-d\') }}{% endif %}' }}
                        {% elseif mapping.type in ['time'] %}
                            {{ '{% if ' ~ entity_twig_var_singular ~ '.' ~ field ~ ' %}{{ ' ~ entity_twig_var_singular ~ '.' ~ field ~ '|date(\'H:i:s\') }}{% endif %}' }}
                        {% elseif mapping.type in ['array'] %}
                            {{ '{% if ' ~ entity_twig_var_singular ~ '.' ~ field ~ ' %}{{ ' ~ entity_twig_var_singular ~ '.' ~ field ~ '|join(\', \') }}{% endif %}' }}
                        {% elseif mapping.type in ['boolean'] %}
                            {{ '{% if ' ~ entity_twig_var_singular ~ '.' ~ field ~ ' %}Yes{% else %}No{% endif %}' }}
                        {% else %}
                            {{ '{{ ' ~ entity_twig_var_singular ~ '.' ~ field ~ ' }}' }}
                        {% endif %}
                    {% else %} {# if field in field_mappings#}
                        {% set relation = relations[field] %}
                        {% set association = associations[field] %}
                        {% if association['type'] == constant('Doctrine\\ORM\\Mapping\\ClassMetadataInfo::MANY_TO_ONE') %}
                        <a href='{{ '{{ path("' ~ relation['route_name'] ~ '_show", {"id": ' ~ entity_var_singular ~ '.' ~ field ~ '.id}) }}' }}'>
                            {{- '{{ ' ~ entity_var_singular ~ '.' ~ field ~ ' }}' -}}
                        </a>
                        {% elseif association['type'] == constant('Doctrine\\ORM\\Mapping\\ClassMetadataInfo::MANY_TO_MANY') %}
                            <ul>
                                {{ '{% for ' ~ relation['entity_twig_var_singular'] ~ ' in ' ~ entity_twig_var_singular ~ '.' ~ field ~ ' %} '}}
                                <li>
                                    <a href='{{ '{{ path("' ~ relation['route_name'] ~ '_show", {"id":' ~ relation['entity_twig_var_singular'] ~ '.id }) }}' }}'>
                                        {{ '{{ ' ~ relation['entity_twig_var_singular'] ~ ' }}' }}
                                    </a>
                                </li>
                                {{ '{% endfor %}' }}
                            </ul>
                        {% elseif association['type'] == constant('Doctrine\\ORM\\Mapping\\ClassMetadataInfo::ONE_TO_MANY') %}
                            <ul>
                                {{ '{% for ' ~ relation['entity_twig_var_singular'] ~ ' in ' ~ entity_twig_var_singular ~ '.' ~ field ~ ' %} '}}
                                <li>
                                    <a href='{{ '{{ path("' ~ relation['route_name'] ~ '_show", {"id":' ~ relation['entity_twig_var_singular'] ~ '.id }) }}' }}'>
                                        {{ '{{ ' ~ relation['entity_twig_var_singular'] ~ ' }}' }}
                                    </a>
                                </li>
                                {{ '{% endfor %}' }}
                            </ul>
                        {% endif %}
                    {% endif %}
                {% endapply %}</td>
            </tr>
        {% endfor %}
        <tr>
            <th>Created</th>
            <td>{{ '{{ ' ~ entity_twig_var_singular ~ '.created|date }}' }}</td>
        </tr>
        <tr>
            <th>Updated</th>
            <td>{{ '{{ ' ~ entity_twig_var_singular ~ '.updated|date }}' }}</td>
        </tr>
        </tbody>
    </table>

{{ "{% endblock %}" }}
{% endautoescape %}
