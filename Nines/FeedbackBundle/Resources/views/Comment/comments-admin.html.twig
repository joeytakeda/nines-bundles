{% set comments = comment_service.findComments(entity) %}
{% if comments|length %}
    <div class="well">
        <h2>Comments</h2>
        {% for comment in comments %} 
            <div class="btn-toolbar">
                <div class="btn-group pull-right">
                    <a href="{{ path('admin_comment_delete', { 'id': comment.id, 'ref': comment_service.entityUrl(comment) }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Comment?">
                        <span class='glyphicon glyphicon-remove'></span> Delete
                    </a>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-body">
                    {{ comment.content }}
                </div>
                <div class="panel-footer">
                    {{ comment.status.label }} - Submitted by
                    {% if comment.followUp %}
                        <a href="mailto:{{comment.email}}">{{comment.fullname}}</a>
                    {% else %}
                        {{comment.fullname}} - please do not contact.
                    {% endif %}   
                    <span class="pull-right">
                        <a href="{{ path('admin_comment_show', {'id': comment.id}) }}">{{ comment.created|date }}</a>
                    </span>
                </div>
            </div>
        {% endfor %}
    </div>
{% endif %}
