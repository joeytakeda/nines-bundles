{% extends '::base.html.twig' %}

{% block pageheader %}
    <h1>Sort the Pages</h1>
{% endblock %}

{% block body %}

    <p>Drag and drop the page titles below to set the order of pages in menus.
        Only public pages are shown.</p>

    <form action='{{ path('page_sort') }}' method='post' name='order'>

        <input type='hidden' name='order' id='order' value='' />

        <div class="btn-toolbar">
            <div class="btn-group pull-right">
                <a href="{{ path('page_index') }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-arrow-left"></span> Back
                </a>
            </div>
        </div>

        <ul class='list-group' id='list-order'>
            {% for page in pages %}
                <li class='list-group-item' id='{{ page.id}}'>
                    <b>{{ page.title }}</b><br/>
                    {{ page.excerpt|raw }}
                </li>
            {% endfor %}
        </ul>

        <div class='form-group'>
            <button type='submit' class='btn btn-primary'>Save</button>
        </div>

    </form>

{% endblock %}

{% block javascripts %}
    
    <script>
        $(document).ready(function () {
            $('#list-order').sortable({
                containment: 'parent',
                cursor: 'move'
            });
            $('button').click(function () {
                $('#order').val($("#list-order").sortable("toArray"));
            });
        });
    </script>
    
    
{% endblock %}