{% extends 'base.html.twig' %}

{% block pageheader %} 
    <h1>{{ post.title }}</h1>
{% endblock %} 

{% block body %}

    {% if is_granted('ROLE_ADMIN') %}
        <div class="btn-toolbar">
            <div class="btn-group pull-right">
                <a href="{{ path('post_index') }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-arrow-left"></span> Back
                </a>
                <a href="{{ path('post_edit', { 'id': post.id }) }}" class="btn btn-default">
                    <span class='glyphicon glyphicon-edit'></span> Edit
                </a>
                <a href="{{ path('post_delete', { 'id': post.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Post?">
                    <span class='glyphicon glyphicon-remove'></span> Delete
                </a>
            </div>
        </div>
        <div class="clearfix"></div>
    {% endif %}

    {% if is_granted('ROLE_ADMIN') %}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">
                    Excerpt
                </h2>
            </div>
            <div class="panel-body">
                {{ post.excerpt|raw }}
            </div>
        </div>
    {% endif %}

    {{ post.content|raw }}

    <div class="text-right">
        Posted {{ post.created|date('Y-m-d H:i:s') }} by {{ post.user.fullname }} in 
        <a href="{{ path('post_category_show', {'id': post.category.id }) }}">
            {{ post.category -}}
        </a>.
    </div>

    {% include 'NinesFeedbackBundle:Comment:comment-interface.html.twig' with { 'entity': post } %}				

{% endblock %}
