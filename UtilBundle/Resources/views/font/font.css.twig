
/* {{ name|raw }} */
@font-face {
    font-family: {{ family|raw }};
    font-style: {{ style }};
    font-weight: {{ weight }};
    src: {% for local in locals -%}local('{{ local|raw }}'),{%- endfor %}

{% for format, path in formats %}
    url('{{ asset(path)|raw }}') format('{{ format }}'){% if not loop.last %},{% else %};{% endif %}

{% endfor %}
}
