{% extends 'base.html.twig' %}

{% block pageheader %} 
    <h1>Post Status</h1>
{% endblock %} 

{% block body %}

    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('post_status_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
            {% if is_granted('ROLE_BLOG_ADMIN') %}
                <a href="{{ path('post_status_edit', { 'id': postStatus.id }) }}" class="btn btn-default">
                    <span class='glyphicon glyphicon-edit'></span> Edit
                </a>
                <a href="{{ path('post_status_delete', { 'id': postStatus.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this PostStatus?">
                    <span class='glyphicon glyphicon-remove'></span> Delete
                </a>
            {% endif %}
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ postStatus.name }}</td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ postStatus.label }}</td>
            </tr>
            <tr>
                <th>Public</th>
                <td>{% if postStatus.public %}Yes{% else %}No{% endif %}</td>
            <tr>
                <th>Description</th>
                <td>{{ postStatus.description|raw }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if postStatus.created %}{{ postStatus.created|date }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if postStatus.updated %}{{ postStatus.updated|date }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}
