{% extends 'base.html.twig' %}

 {% block pageheader %} 
    <h1>PostCategory List</h1>
    <p class="count">
        Displaying {{ postCategories|length }} postCategories of {{ postCategories.getTotalItemCount }} total.
    </p>
 {% endblock %} 

{% block body %}

        <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            <a href="{{ path('post_category_new') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-plus"></span> New
            </a>
            <a href="{{ path('post_category_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search
            </a>
        </div>
    </div>
        
    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Label</th>
                <th>Description</th>
                <th>Created</th>
                <th>Updated</th>            </tr>
        </thead>
        <tbody>
        {% for postCategory in postCategories %}
            <tr>
                <td>
                    <a href="{{ path('post_category_show', { 'id': postCategory.id }) }}">
                        {{ postCategory.name }}
                    </a>
                </td>
                <td>{{ postCategory.label }}</td>
                <td>{{ postCategory.description }}</td>
                <td>{% if postCategory.created %}{{ postCategory.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if postCategory.updated %}{{ postCategory.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        
    <div class="navigation">
        {{ knp_pagination_render(postCategories) }}
    </div>

{% endblock %}
