{% extends 'base.html.twig' %}

{% block pageheader %} 
    <h1>PageStatus</h1>
{% endblock %} 

{% block body %}

    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('page_status_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
            {% if is_granted('ROLE_BLOG_ADMIN') %}
                <a href="{{ path('page_status_edit', { 'id': pageStatus.id }) }}" class="btn btn-default">
                    <span class='glyphicon glyphicon-edit'></span> Edit
                </a>
                <a href="{{ path('page_status_delete', { 'id': pageStatus.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this PageStatus?">
                    <span class='glyphicon glyphicon-remove'></span> Delete
                </a>
            {% endif %}
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ pageStatus.name }}</td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ pageStatus.label }}</td>
            </tr>
            <tr>
                <th>Public</th>
                <td>{% if pageStatus.public %}Yes{% else %}No{% endif %}</td>
            <tr>
                <th>Description</th>
                <td>{{ pageStatus.description }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if pageStatus.created %}{{ pageStatus.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if pageStatus.updated %}{{ pageStatus.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}
