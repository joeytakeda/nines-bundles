{% extends 'base.html.twig' %}

{% block body %}
    <h1>Page Creation</h1>

    {{ form_start(form) }}
    {{ form_widget(form) }}
    <div class="form-group">
        <div class="col-sm-2"></div>
        <div class="col-sm-10">
            <input type="submit" value="Create" class="btn btn-primary" />
            <a href="{{ path('page_index') }}" class="btn btn-warning">Cancel</a>
        </div>
    </div>
    {{ form_end(form) }}

{% endblock %}

{% block htmlhead %}
    {% include "@CKSourceCKFinder/setup.html.twig" %}
{% endblock %}

{% block javascripts %}
    <script>
        CKEDITOR.on('instanceReady', function(event){
            console.log(event);
            CKFinder.setupCKEditor( event.editor );
        });
    </script>
{% endblock %}
