{% extends 'base.html.twig' %}

{% block pageheader %} 
    <h1>Post Category</h1>
{% endblock %} 

{% block body %}

    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('post_category_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
            {% if is_granted('ROLE_BLOG_ADMIN') %}

                <a href="{{ path('post_category_edit', { 'id': postCategory.id }) }}" class="btn btn-default">
                    <span class='glyphicon glyphicon-edit'></span> Edit
                </a>
                <a href="{{ path('post_category_delete', { 'id': postCategory.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this PostCategory?">
                    <span class='glyphicon glyphicon-remove'></span> Delete
                </a>
            {% endif %}
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ postCategory.name }}</td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ postCategory.label }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ postCategory.description }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if postCategory.created %}{{ postCategory.created|date }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if postCategory.updated %}{{ postCategory.updated|date }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    {% for post in posts %}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title pull-left">
                    <a href="{{ path('post_show', { 'id': post.id }) }}">
                        {{ post.title }}
                    </a>
                </h2>
                {% if is_granted('ROLE_BLOG_ADMIN') %}
                    <div class="panel-title pull-right">{{ post.status.label }}</div>
                {% endif %}
                <div class="clearfix"></div>
            </div>
            <div class="panel-body">
                {{ post.excerpt|raw }}
            </div>
            <div class="panel-footer text-right">
                Posted {{ post.created|date }} by {{ post.user.fullname }} in
                <a href="{{ path('post_category_show', {'id': post.category.id }) }}">
                    {{ post.category -}}
                </a>.
            </div>
        </div>
    {% endfor %}

    <div class="navigation">
        {{ knp_pagination_render(posts) }}
    </div>

{% endblock %}
