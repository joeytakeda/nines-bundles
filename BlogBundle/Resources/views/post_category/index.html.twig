{% extends 'base.html.twig' %}

{% block pageheader %}
    <h1>Post Category List</h1>
    <p class="count">
        Displaying {{ postCategories|length }} postCategories of {{ postCategories.getTotalItemCount }} total.
    </p>
{% endblock %}

{% block body %}

    {% if is_granted('ROLE_BLOG_ADMIN') %}
        <div class='btn-toolbar pull-right'>
            <div class='btn-group'>
                <a href="{{ path('post_category_new') }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-plus"></span> New
                </a>
            </div>
        </div>
    {% endif %}

    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Label</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            {% for postCategory in postCategories %}
                <tr>
                    <td>
                        <a href="{{ path('post_category_show', { 'id': postCategory.id }) }}">
                            {{ postCategory.label }}
                        </a>
                    </td>
                    <td>{{ postCategory.description|raw }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(postCategories) }}
    </div>

{% endblock %}
